<h1>Admin Page</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Password</th>
    <th>Admin</th>
    <th>Professor</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.password %></td>
    <td><%= user.admin %></td>
    <td><%= user.professor %></td>
    <td><%= link_to 'Show', user , html_options = { :class => "linkbutton" } %></td>
    <td><%= link_to 'Edit', edit_user_path(user) , html_options = { :class => "linkbutton" } %></td>
    <td><%= link_to 'Delete', delete_user_path(user) , html_options = { :class => "linkbutton" } %></td>
  </tr>
<% end %>
</table>


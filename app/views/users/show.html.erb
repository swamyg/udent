<p>
	<b> Enrolled:</b>	
</p>


	<table>
		<th>
			<b> Course Name</b>
		</th>
		<th>
			<b> Course Description</b>
		</th>
		<th>
			
		</th>
		<% @courses.each do |course| %>
		<tbody>		
			<td>
				<%= course.course_name %>
			</td>
			<td>
				<%= course.course_description %>
			</td>
			<td>
				<%= link_to "Drop Class" , dropcourse_user_path(:course_name => course.course_name ) %>
			</td>
		</tbody>
		<% end %>
	</table>
	
<br />

<p>
	<b> Available for Enrollment</b>	
</p>
<table>
		<th>
			<b> Course Name</b>
		</th>
		<th>
			<b> Course Description</b>
		</th>
		<th>
			
		</th>
		<% (@allcourses-@courses).each do |course| %>
		<tbody>
			<td>
				<%= course.course_name %>
			</td>

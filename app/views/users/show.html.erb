
	
<div id="userdetails">
	<table >
		<th> Name  </th>
		<th> Email </th>
		<th></th>
		<th></th>
		<tbody>
		<td>
			<%= @user.name %>
		</td>
		<td>
			<%= @user.email %>
		</td>
		<td>
			<%= link_to 'Edit Details', edit_user_path(@user) %>
		</td>
		<td>
			<%= link_to 'Profile Page', user_profile_path(@user) %>
		</td>
		</tbody>
	</table>
	
</div>	
